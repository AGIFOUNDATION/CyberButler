{
	"manifest_version": 3,
	"minimum_chrome_version": "116",
	"name": "CyberButler",
	"author": {
		"email": "lostabaddon@gmail.com"
	},
	"homepage_url": "https://agifoundation.github.io/CyberButler/",
	"version": "0.3.5",
	"description": "Your personal cyber knowledge vault butler.",
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"64": "images/icon64.png",
		"128": "images/icon128.png",
		"256": "images/icon256.png",
		"512": "images/icon512.png",
		"1024": "images/icon1024.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"contextMenus",
		"scripting",
		"userScripts",
		"idle",
		"webRequest",
		"storage",
		"unlimitedStorage",
		"notifications"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"script/i18n.js",
				"script/common.js",
				"components/panel.js",
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"/images/xmark.svg",
				"/images/feather.svg",
				"/images/circle-xmark.svg",
				"/images/copy.svg",
				"/images/cyprite.png"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"action": {
		"default_title": "Your butler's here.",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"64": "images/icon64.png",
			"128": "images/icon128.png",
			"256": "images/icon256.png",
			"512": "images/icon512.png",
			"1024": "images/icon1024.png"
		}
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+Y"
			}
		}
	}
}